<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextQuizName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter the name of the quiz"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextQuizDuration"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextQuizName"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Duration of the quiz (mm:ss)"
        android:inputType="time" />

    <EditText
        android:id="@+id/editTextQuizDueDate"
        android:layout_width="381dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextQuizDuration"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="Due date for the students"
        android:inputType="date" />

</RelativeLayout>